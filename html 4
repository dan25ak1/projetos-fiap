// Função para adicionar números e operadores à entrada
function digit(value) {
  document.getElementById('result').value += value;
}

// Função para limpar a entrada
function clearAll() {
  document.getElementById('result').value = '';
}

// Função para calcular o resultado
function equals() {
  let result = document.getElementById('result').value;
  // Tenta calcular a expressão
  try {
    // Usa a função eval para avaliar a expressão
    let finalResult = evalExpression(result);
    // Exibe o resultado na entrada
    document.getElementById('result').value = finalResult;
  } catch (error) {
    // Se houver um erro na expressão, exibe uma mensagem de erro
    document.getElementById('result').value = 'Erro';
    setTimeout(clearError, 2000); // Limpa o erro após 2 segundos
  }
}

// Função para avaliar a expressão de forma segura
function evalExpression(expression) {
  // Substitui "x" por "*" para garantir que a multiplicação seja calculada corretamente
  expression = expression.replace(/x/g, '*');
  // Usa a função eval para avaliar a expressão
  return Function('"use strict";return (' + expression + ')')();
}

// Função para limpar a mensagem de erro
function clearError() {
  document.getElementById('result').value = '';
}